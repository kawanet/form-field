# Editor configuration, see http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 255
tab_width = 4
trim_trailing_whitespace = true

[*.ts]
ij_typescript_space_before_function_left_parenth = true

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[Makefile]
indent_style = tab
